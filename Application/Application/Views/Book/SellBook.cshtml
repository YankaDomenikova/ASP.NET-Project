@model BookViewModel
@{
    ViewData["Title"] = "Sell Books";
}

<div class="row">
    <div class="col-md-12">
        <h1>Sell Books</h1>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Book" asp-action="AddBook" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Title"></label>
                    <input asp-for="@Model.Title" class="form-control" autocomplete="off" />
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Author"></label>
                    <input asp-for="@Model.Author" class="form-control" autocomplete="off" />
                    <span asp-validation-for="@Model.Author" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.GenreTitle"></label>
                    <input asp-for="@Model.GenreTitle" class="form-control" />
                    <span asp-validation-for="@Model.GenreTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Description"></label>
                    <input asp-for="@Model.Description" class="form-control" autocomplete="off" />
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Price"></label>
                    <input asp-for="@Model.Price" type="text" class="form-control" autocomplete="off" min="0" />
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Quantity"></label>
                    <input asp-for="@Model.Quantity" type="number" class="form-control" autocomplete="off" min="0" />
                    <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Pages"></label>
                    <input asp-for="@Model.Pages" type="number" class="form-control" autocomplete="off" min="0" />
                    <span asp-validation-for="@Model.Pages" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Language"></label>
                    <input asp-for="@Model.Language" class="form-control" autocomplete="off" />
                    <span asp-validation-for="@Model.Language" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Country"></label>
                    <input asp-for="@Model.Country" class="form-control" autocomplete="off" />
                    <span asp-validation-for="@Model.Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.PublicationDate"></label>
                    <input asp-for="@Model.PublicationDate" class="form-control" autocomplete="off" />
                    <span asp-validation-for="@Model.PublicationDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Publisher"></label>
                    <input asp-for="@Model.Publisher" class="form-control" autocomplete="off" />
                    <span asp-validation-for="@Model.Publisher" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.BestsellerRank"></label>
                    <input asp-for="@Model.BestsellerRank" type="number" class="form-control" autocomplete="off" min="0" />
                    <span asp-validation-for="@Model.BestsellerRank" class="text-danger"></span>
                </div>
                <input type="submit" value="Submit" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
